
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CheckIn.cshtml";
}
<div class="col-md-6 offset-md-3">
    <div class="signup-content">
        <div class="signup-form">
            <form method="POST" class="register-form" id="register-form">
                <div class="form-row d-flex justify-content-center">
                    <div class="form-group w-100">
                        <div class="form-radio">
                            <div class="label-flex">
                                <label for="payment">Payment Mode</label>
                            </div>
                            <div class="form-radio-group" style="display: block">
                                <div class="form-radio-item">
                                    <input type="radio" name="payment" id="cash" value="fromtimetotime" checked>
                                    <label class="abc" for="cash">Cash Payment Mode Cash Payment Mode Cash Payment Mode Cash Payment Mode Cash Payment Mode</label>
                                    <span class="check"></span>
                                </div>
                                <div class="form-radio-item">
