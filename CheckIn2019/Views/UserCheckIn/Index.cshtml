                                    <label class="abc" for="cheque">Cheque</label>
                                    <span class="check"></span>
                                </div>
                                <div class="form-radio-item">
                                    <input type="radio" name="payment" id="demand" value="fromtimetotime2">
                                    <label class="abc" for="demand">Demand Draf</label>
                                    <span class="check"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-input">
                            <input type="text" name="chequeno" id="chequeno" />
                        </div>
                    </div>
                </div>
                <div class="form-submit d-flex justify-content-center">
                    <input type="button" value="Submit" class="submit" id="submit" name="submit" />
                </div>
            </form>
        </div>
    </div>
</div>


